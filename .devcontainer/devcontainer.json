{
  "name": "Angular-Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "forwardPorts": [4200],
  // Pas utilis√© pour les devcontainers de IDEA
  "extensions": [
    "angular.ng-template",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
  ],
  "postCreateCommand": "if [ -f frontend/package.json ]; then npm install --prefix frontend; fi",
  "remoteUser": "root"
}
